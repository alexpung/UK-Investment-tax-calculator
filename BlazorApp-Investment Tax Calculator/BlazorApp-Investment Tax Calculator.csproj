<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.5" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.5" PrivateAssets="all" />
    <PackageReference Include="NMoneys" Version="6.1.2" />
    <PackageReference Include="Syncfusion.Blazor.Core" Version="21.2.5" />
    <PackageReference Include="Syncfusion.Blazor.Navigations" Version="21.2.5" />
    <PackageReference Include="Syncfusion.Blazor.Themes" Version="21.2.5" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Resources\AuthorNotice.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
