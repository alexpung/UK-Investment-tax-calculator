@page "/PdfReportPage"

@using InvestmentTaxCalculator.Components
@using Microsoft.AspNetCore.Components

<div class="container-fluid py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Page Header -->
            <div class="page-header text-center mb-5">
                <h1 class="page-title">PDF Tax Reports</h1>
                <p class="page-subtitle">Generate and download PDF reports for your tax calculations</p>
            </div>

            <!-- Notice -->
            <div class="alert alert-info alert-custom mb-4" role="alert">
                <strong>Note:</strong> Selecting multiple years will generate multiple PDFs, one for each year selected.
            </div>

            <!-- Calculation Summary Section -->
            <div class="section mb-5">
                <CalculationSummary></CalculationSummary>
            </div>

            <!-- Export PDF Section -->
            <div class="section">
                <ExportPdfTaxReport></ExportPdfTaxReport>
            </div>
        </div>
    </div>
</div>
