<UserControl
    x:Class="CapitalGainCalculator.View.ExportToFilePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapitalGainCalculator.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodel="clr-namespace:CapitalGainCalculator.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:ExportToFileViewModel}"
    d:DesignHeight="100"
    d:DesignWidth="800"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    mc:Ignorable="d">
    <StackPanel>
        <Label x:Name="ExportToFileLabel" FontSize="20">Export Data to file</Label>
        <StackPanel x:Name="ExportButtonsStackPanel" Orientation="Horizontal">
            <ui:Button Margin="{DynamicResource ButtonMargin}" x:Name="ExportDividendButton" Command="{Binding ExportDividendToFileCommand}" Content="Export Dividend" />
        </StackPanel>
    </StackPanel>
</UserControl>
